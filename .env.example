# InnoAI Platform Environment Configuration

# Server Configuration
PORT=3456
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# DirectPay Configuration
DIRECTPAY_API_KEY=your-directpay-api-key
DIRECTPAY_MERCHANT_ID=your-directpay-merchant-id
DIRECTPAY_ENVIRONMENT=sandbox

# Database Configuration (if using external DB)
# DATABASE_URL=postgresql://user:pass@localhost:5432/innoai

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3456

# Logging
LOG_LEVEL=info
